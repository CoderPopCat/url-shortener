<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
  <link rel="stylesheet" href="style.css">
  <title>URL Shortener</title>
</head>
<body>

  <div class="container">
    <h1 class="text-center">URL Shrinker</h1>
    <form action="/shortUrls" method="POST" class="my-4 form">
<div class="form-group">
    <label for="formGroupExampleInput">Long URL</label>
    <input required type="url" class="form-control" name="fullUrl" placeholder="Your URL">
  </div>
  
<label for="e">Your Extension</label>
<div class="form-group form-inline">
<input readonly type="text" id="e" class="form-control" placeholder="url.popcat.xyz" style="color: white; cursor: not-allowed;"><p style="font-size: 40px;">/</p>
    <input required type="text" id="e" class="form-control" name="shortUrl" placeholder="example-endpoint">
 
  </div>
  <br>
      <button class="btnlmaoxd" type="submit">Shrink</button>
    </form>
    <br>
    <h3 class="text-center">All URLs</h3>
    <table class="table table-striped table-responsive justify-content-center">
      <thead>
        <tr>
          <th>Full URL</th>
          <th>Short URL</th>
          <th>Clicks</th>
        </tr>
      </thead>
      <tbody>
        <% shortUrls.forEach(shortUrl => { %>
          <tr>
            <td class="justify-content-center"><a href="<%= shortUrl.full %>"><%= shortUrl.full %></a></td>
            <td><a href="<%= shortUrl.short %>"><%= shortUrl.short %></a></td>
            <td><%= shortUrl.clicks %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
